{% extends 'layout.twig' %}

{% block css %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.6/sweetalert2.min.css" />
{% endblock %}

{% block content %}
<div class="container">
    <h1>Most Popular listmusic</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Cover</th>
            <th>Nombre</th>
            <th>Genero</th>
            <th>Recomiendas</th>
            <th>Album</th>
            <th>Editar</th>
            <th>Borrar</th>
        </tr>
        </thead>
        <tbody>
        {% for listmusic in listmusic %}
        <tr>
            <td><a href="listmusic/{{ listmusic.id }}"><img src="{{ listmusic.image }}" alt="Logo de {{ listmusic.name }}" class="logo"></a></td>
            <td><a href="listmusic/{{ listmusic.id }}">{{ listmusic.name }}</a></td>
            <td>{{ listmusic.genero }}</td>
            <td>{{ listmusic.recomiendas }}</td>
            <td>{{ listmusic.album }}</td>
            <td>
                <a href="/listmusic/edit/{{ listmusic.id }}" class="editar btn btn-link">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <form action="/listmusic" method="POST" id="deletelistmusic-{{ listmusic.id }}">
                    <input type="hidden" name="id" value="{{ listmusic.id }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" id="deleteForm" class="btn btn-link btn-alert" onclick="deletelistmusic({{ listmusic.id }})"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                </form>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
</div><!-- /.container -->
{% endblock %}

{% block js %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.0.6/sweetalert2.min.js"></script>
<script src="{{  '' | url }}js/app.js"></script>
{% endblock %}
